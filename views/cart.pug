extends layout

block content
  h1 My shopping Cart
  - var total=0;
  - var items=0;
    table.table
      thead
        th Name
        th Price
        th Actions
        th Rating
      tbody
        each item in cart
          - total += Number(item.price)
          - items ++
          tr
            td=item.name
            td=item.price
            td
              a(href="/products/cart/remove/"+item._id, class="btn btn-danger btn-sm") Remove Item
            td 
              <form class="rating">
                <label>
                  <input type="radio" name="stars" value="1" />
                  <span class="icon">★</span>
                </label>
                <label>
                  <input type="radio" name="stars" value="2" />
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                </label>
                <label>
                  <input type="radio" name="stars" value="3" />
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>   
                </label>
                <label>
                  <input type="radio" name="stars" value="4" />
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                </label>
                <label>
                  <input type="radio" name="stars" value="5" />
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                </label>
              </form>
      tfoot
        tr
          td Total
          if (items>=3)
            td=total



